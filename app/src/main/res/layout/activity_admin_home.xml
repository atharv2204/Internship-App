<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminHome">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E64A19"
            android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="start|center"
                    android:src="@drawable/baseline_dashboard_customize_24"
                    >
                </ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingTop="0dp"
                android:paddingLeft="0dp"
                android:textSize="26dp"
                android:letterSpacing="0.1"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="@color/dark_gray" />

        </LinearLayout>



        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/food"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="20dp"
                        android:backgroundTint="#EF8930">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="30dp"
                                app:lottie_autoPlay="true"
                                android:scaleType="fitXY"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/foodbike">

                            </com.airbnb.lottie.LottieAnimationView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Add Items"
                                android:layout_weight="2"
                                android:letterSpacing="0.1"
                                android:layout_gravity="end|center"
                                android:textAlignment="textEnd"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/setting"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="20dp"
                        android:backgroundTint="#F8734A">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Order Requests"
                                android:layout_gravity="start|center"
                                android:textAlignment="textStart"
                                android:textColor="@color/white"
                                android:textSize="30dp"
                                android:textStyle="bold" />
                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="right"
                                app:lottie_autoPlay="true"
                                android:scaleType="fitXY"
                                android:scaleY="1.5"
                                android:scaleX="1.5"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/pureqanim">

                            </com.airbnb.lottie.LottieAnimationView>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/pet"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="20dp"
                        android:backgroundTint="#D8502D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                app:lottie_autoPlay="true"
                                android:scaleType="fitXY"
                                android:scaleY="1.5"
                                android:scaleX="1.5"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/ridedetailsanim">

                            </com.airbnb.lottie.LottieAnimationView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="ride_details_open"
                            android:orientation="horizontal"
                            android:layout_marginRight="10dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Live Orders"
                                android:layout_marginStart="150dp"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/money"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="20dp"
                        android:backgroundTint="#DA7120">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical"
                            >

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="right"
                                app:lottie_autoPlay="true"
                                android:scaleType="fitXY"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/historyanim">

                            </com.airbnb.lottie.LottieAnimationView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:onClick="open_his"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="History"
                                android:textColor="@color/white"
                                android:textSize="30dp"
                                android:layout_marginRight="70dp"
                                android:textStyle="bold" />





                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>