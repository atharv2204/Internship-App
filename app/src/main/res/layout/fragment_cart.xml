<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Cart">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/mainFrame"
     android:layout_marginTop="5dp"
     >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/antique_white"
      android:orientation="horizontal"
      android:id="@+id/offers"
      android:layout_alignParentTop="true"
      >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Offers "
          android:layout_gravity="center"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:letterSpacing="0.2"
          android:padding="10dp"
          android:drawableLeft="@drawable/baseline_discount_24"
          android:textSize="22sp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No Current Offers "
          android:layout_weight="3"
          android:textColor="@color/grey"
          android:textAlignment="textEnd"
          android:layout_gravity="end|center"
          android:letterSpacing="0.1"
          android:layout_margin="5dp"
          android:textSize="20sp"/>

  </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideOverlay"
    android:layout_below="@+id/offers"
    android:layout_above="@+id/grandTotal"
    android:layout_marginBottom="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/gainsboro">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"

            android:src="@drawable/image1"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:letterSpacing="0.1"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Price : 100 Rs."
                android:letterSpacing="0.1"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Quantity : 2"
                android:letterSpacing="0.1"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/adamina"
                android:letterSpacing="0.2"
                android:text="Delete"
                android:textSize="15sp"
                android:paddingBottom="5dp"/>


        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/gainsboro">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img3"
                    android:scaleType="fitXY"
                    android:layout_margin="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:letterSpacing="0.1"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Price : 150 Rs."
                        android:letterSpacing="0.1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Quantity : 2"
                        android:letterSpacing="0.1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/red"
                        android:fontFamily="@font/adamina"
                        android:letterSpacing="0.2"
                        android:text="Delete"
                        android:textSize="15sp"
                        android:paddingBottom="5dp"/>


                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/gainsboro">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img10"
                    android:scaleType="fitXY"
                    android:layout_margin="20dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:letterSpacing="0.1"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Price : 180 Rs."
                        android:letterSpacing="0.1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Quantity : 1"
                        android:letterSpacing="0.1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/red"
                        android:fontFamily="@font/adamina"
                        android:letterSpacing="0.2"
                        android:text="Delete"
                        android:textSize="15sp"
                        android:paddingBottom="5dp"/>


                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/gainsboro">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img1"
                    android:scaleType="fitXY"
                    android:layout_margin="20dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:letterSpacing="0.1"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Price : 120 Rs."
                        android:letterSpacing="0.1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Quantity : 1"
                        android:letterSpacing="0.1"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/adamina"
                        android:letterSpacing="0.2"
                        android:textSize="15sp"
                        android:backgroundTint="@color/red"
                        android:layout_margin="5dp"
                        android:text="Delete"
                        android:paddingBottom="5dp"/>


                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:id="@+id/grandTotal"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="85dp"
         android:background="#C3DCA0">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="60dp"
         android:layout_weight="3"
         android:orientation="vertical"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:fontFamily="sans-serif-condensed-medium"
             android:text="Grand Total : "
             android:letterSpacing="0.2"
             android:textSize="22sp"
             android:textColor="@color/black"
             android:layout_gravity="start"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="sans-serif-condensed-medium"
             android:text="800 Rs."
             android:letterSpacing="0.2"
             android:textSize="20sp"

             android:layout_weight="1"
             />
     </LinearLayout>
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@font/adamina"
             android:letterSpacing="0.2"
             android:textSize="15sp"

             android:backgroundTint="@color/green"
             android:layout_margin="5dp"
             android:text="Make Payment" />
     </LinearLayout>
 </RelativeLayout>
</FrameLayout>